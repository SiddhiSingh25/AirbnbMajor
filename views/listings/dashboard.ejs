<%- layout('layouts/boilerplate') %>

    <body>
        <div class="p-8 max-w-4xl mx-auto bg-white rounded-lg shadow-md mb-10">
            <div class="flex flex-row items-start w-full max-w-screen-md mx-auto mt-8 justify-between">
                <!-- Profile Image -->
                <div class="relative w-56 h-56 lg:w-64 lg:h-64 md:w-64 md:h-64">
                    <% if (userDetails.userImage && userDetails.userImage.url) { %>
                        <img src="<%= userDetails.userImage.url %>" alt="Profile"
                            class="rounded-full object-cover object-center w-60 h-60 border-solid border-gray-200 border-[0.4rem]">
                        <% } else { %>
                            <div
                                class="w-56 h-56 rounded-full border-solid border-gray-200 border-[0.4rem] bg-black text-white flex items-center justify-center text-4xl">
                                <%=userDetails.username.slice(0,1).toUpperCase() %>
                            </div>
                            <% } %>
                </div>

                <div class="w-[60%]">
                    <div class="mt-4 text-center w-full flex gap-10">
                        <h2 class="text-2xl font-semibold">@<%=userDetails.username%>
                        </h2>
                        <a href="/user/dashboard/<%= userDetails._id %>"
                            class="px-3 py-1 bg-gray-200 text-black rounded-lg hover:bg-gray-300 inline-block text-center">
                            Edit profile
                        </a>
                    </div>


                    <div class="flex  text-center w-full justify-between mt-10">
                        <div>
                            <p class="text-2xl font-bold">
                                <%=reviewCount%>
                            </p>
                            <p class="text-xl text-gray-600">Reviews</p>
                        </div>
                        <div>
                            <p class="text-2xl font-bold">
                                <%=postCount%>
                            </p>
                            <p class="text-xl text-gray-600">Posts</p>
                        </div>
                        <div>
                            <p class="text-2xl font-bold">
                                <%=years%>
                            </p>
                            <p class="text-xl text-gray-600">year hosting</p>
                        </div>
                    </div>
                </div>
            </div>


            <!-- About Section -->
            <div class="lg:col-span-2 mt-10">
                <div class="space-y-4">
                    <p class="text-xl">
                        
                        <%=userDetails.details.about%>

                    </p>
                </div>
            </div>

            <!-- Confirmed Information -->
            <div class="mt-8">
                <h3 class="font-semibold text-2xl mb-2">About <%=userDetails.username%>'s</h3>
                <ul class="list-disc">
                    <%if(userDetails.details.location !=="" ){%>
                        <li class="mb-2 text-xl list-none"><span
                                class="inline-block w-2 h-2 rounded-full bg-[#ff385c] mr-2"></span>Live in
                            <%=userDetails.details.location%>
                        </li>
                        <%}%>
                            <%if(userDetails.details.quote !=="" ){%>
                                <li class="mb-2 text-xl list-none"><span
                                        class="inline-block w-2 h-2 rounded-full bg-[#ff385c] mr-2"></span>
                                    <%=userDetails.details.quote%>
                                </li>
                                <%}%>
                                    <%if(userDetails.details.language !=="" ){%>
                                        <li class="mb-2 text-xl list-none"><span
                                                class="inline-block w-2 h-2 rounded-full bg-[#ff385c] mr-2"></span>Fluent
                                            in <%=userDetails.details.language%>
                                        </li>
                                        <%}%>

                                            <li class="mb-2 text-xl list-none"><span
                                                    class="inline-block w-2 h-2 rounded-full bg-[#ff385c] mr-2"></span>Present
                                                Since <%= new Date(userDetails.createdAt).getFullYear() %>
                                            </li>
                </ul>
            </div>

            <!-- social -->
            <%if(userDetails.url.instagram !=="" || userDetails.url.linkedin !=="" || userDetails.url.twitter !=="" ){%>
                <div class="text-center space-y-4 py-8">
                    <h1 class="text-2xl font-semibold text-gray-800">Contact to Host</h1>
                    <div class="flex justify-center space-x-8">
                        <!-- Instagram Icon -->
                        <%if(userDetails.url.instagram !=="" ){%>
                            <a href="<%=userDetails.url.instagram%>" target="_self"
                                class="hover:text-[#e1306c] transition-colors duration-300">
                                <i class="fa-brands fa-instagram text-3xl font-bold text-[#ff385c]"></i>
                            </a>
                            <%}%>

                                <%if(userDetails.url.linkedin !=="" ){%>
                                    <!-- Email Icon -->
                                    <a href="<%=userDetails.url.linkedin%>" target="_blank"
                                        class="hover:text-gray-700 transition-colors duration-300">
                                        <i class="fa-solid fa-linkedin text-3xl font-bold text-[#ff385c]"></i>
                                    </a>
                                    <%}%>


                                        <%if(userDetails.url.twitter !=="" ){%>
                                            <!-- Twitter Icon -->
                                            <a href="<%=userDetails.url.twitter%>" target="_blank"
                                                class="hover:text-[#1DA1F2] transition-colors duration-300">
                                                <i class="fa-brands fa-x-twitter text-3xl font-bold text-[#ff385c]"></i>
                                            </a>
                                            <%}%>
                    </div>
                </div>
                <%}%>



        </div>
    </body>